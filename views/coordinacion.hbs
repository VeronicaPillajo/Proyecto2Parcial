{{> header }}

{{> navbar }}

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Modulo para aprobacion de temas:</strong> A continuacion se puede seleccionar temas y aprobarlos o mandarlos
    a revisón
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>


<!-- Button trigger modal -->

<button class="btn btn-lg float-right" style="background-color:transparent;" data-toggle="modal"
    data-target="#exampleModal">
    <i class="fa fa-question-circle"></i> Ayuda
</button>
<div class="container">
    <blockquote class="blockquote text-center">
        <h2>Aprobación de Temas</h2>
    </blockquote>
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <form method="POST" action="/addestado">


                <div class="container">
                    Observaciones Registradas:
                    <div class="table-wrapper-scroll-y my-custom-scrollbar">

                        <table class="table table-bordered table-striped mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Nombre Tema</th>
                                    <th scope="col">Observaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#obs}}
                                <tr>
                                    <td>{{nombretema}}</td>
                                    <td>{{descripcion}}</td>
                                </tr>
                                {{/obs}}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <label for="formGroupExampleInput">Tema:</label>
                    <select id="inputState" name="idtema" id="tema" class="form-control" required>
                        {{#obs}}
                        <option name="idtemar" value={{idtema}}> {{idtema}}.- {{nombretema}} </option>
                        {{/obs}}
                    </select>
                </div>


                <div class="btn-group">
                    <button class="btn btn-primary" type="submit">Aprobar</button>
                </div>
                <div class="btn-group">
                    <a class="btn btn-primary" href="/revisor">Revisión</a>
                </div>

            </form>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Procéso de Ingreso de Tema</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Pasos:
                <ul>
                    <li>1.-Observar si existen Observaciones </li>
                    <li>2.-Seleccionar Tema</li>
                    <li>3.-Dar click en Aprobar o Revisión para manadar a revisión el tema</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

{{> footer }}